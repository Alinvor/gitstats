    "version": "0.2.0",
    "configurations": [{
            "name": "Python: File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Moudle",
            "type": "python",
            "request": "launch",
            "module": "Python Moudle"
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [{
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "."
            }]
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug",
            "program": "${file}"
        }
    ]
}
